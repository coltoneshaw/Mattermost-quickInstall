{
  "compilerOptions": {
      "module": "ES2022",
      "target": "esnext", 
      "moduleResolution": "node",
      "strict": true,
      "lib": [
        "dom",
        "es2015",
        "es2016",
        "es2017",
        "es2021",
        "es6"
      ],
      "rootDir": "src",
      "baseUrl": "./",
      "paths": {
        "@/*": [
          "src/*"
        ]
      },
      "forceConsistentCasingInFileNames": true 
  }
}